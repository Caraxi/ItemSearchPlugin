<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup Label="Target">
		<PlatformTarget>AnyCPU</PlatformTarget>
		<TargetFramework>net472</TargetFramework>
		<LangVersion>8.0</LangVersion>
		<Platforms>AnyCPU;x64</Platforms>
	</PropertyGroup>
	<PropertyGroup Label="Build">
		<OutputType>Library</OutputType>
		<OutputPath></OutputPath>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<DebugSymbols>true</DebugSymbols>
		<DebugType>Portable</DebugType>
		<DocumentationFile></DocumentationFile>
	</PropertyGroup>
	<PropertyGroup Label="Feature">
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Version>1.7.3.2</Version>
	</PropertyGroup>
	<ItemGroup Label="Resources">
		<None Include="$(SolutionDir)/Resources/**/*" CopyToOutputDirectory="PreserveNewest" Visible="false" />
		<None Remove="Publish\**" />
		<None Remove="lib\**" />
	</ItemGroup>
	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<AppOutputBase>$(MSBuildProjectDirectory)\</AppOutputBase>
		<PathMap>$(AppOutputBase)=F:\repo\ItemSearch\ItemSearchPlugin</PathMap>
		<Deterministic>true</Deterministic>
	</PropertyGroup>
	<PropertyGroup>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
		<AssemblyName>ItemSearchPluginNoDeps</AssemblyName>
	</PropertyGroup>
	<ItemGroup>
		<Compile Remove="Resources\**" />
		<EmbeddedResource Remove="Resources\**" />
		<None Remove="Resources\**" />
		<Compile Remove="Publish\**" />
		<EmbeddedResource Remove="Publish\**" />
		<Compile Remove="lib\**" />
		<EmbeddedResource Remove="lib\**" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="System.Linq.Async" Version="4.0.0" />
		<PackageReference Include="ILMerge" Version="3.0.41" />
	</ItemGroup>
	<ItemGroup>
		<Reference Include="Microsoft.CSharp" />
		<Reference Include="Dalamud">
			<Private>false</Private>
			<HintPath>$(AppData)\XIVLauncher\addon\Hooks\Dalamud.dll</HintPath>
		</Reference>
		<Reference Include="ImGui.NET">
			<Private>false</Private>
			<HintPath>$(AppData)\XIVLauncher\addon\Hooks\ImGui.NET.dll</HintPath>
		</Reference>
		<Reference Include="ImGuiScene">
			<Private>false</Private>
			<HintPath>$(AppData)\XIVLauncher\addon\Hooks\ImGuiScene.dll</HintPath>
		</Reference>
		<Reference Include="Serilog">
			<Private>false</Private>
			<HintPath>$(AppData)\XIVLauncher\addon\Hooks\Serilog.dll</HintPath>
		</Reference>
		<Reference Include="Newtonsoft.Json">
			<Private>false</Private>
			<HintPath>$(AppData)\XIVLauncher\addon\Hooks\Newtonsoft.Json.dll</HintPath>
		</Reference>
		<Reference Include="Lumina">
			<Private>false</Private>
			<HintPath>$(AppData)\XIVLauncher\addon\Hooks\Lumina.dll</HintPath>
		</Reference>
		<Reference Include="Lumina.Excel">
			<Private>false</Private>
			<HintPath>$(AppData)\XIVLauncher\addon\Hooks\Lumina.Excel.dll</HintPath>
		</Reference>
		<Reference Include="System.Windows.Forms" />
	</ItemGroup>
	<ItemGroup>
		<EmbeddedResource Include="Localization\de.json" />
		<EmbeddedResource Include="Localization\fr.json" />
		<EmbeddedResource Include="Localization\jp.json" />
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="lib\FFXIVClientStructs\FFXIVClientStructs.csproj" />
	</ItemGroup>
	<Target Name="ILMerge" AfterTargets="PostBuildEvent">
		<!-- Merge and rename -->
		<Exec Command="$(ILMergeConsolePath) /target:library /out:$(TargetDir)/../ItemSearchPlugin.dll /log /lib:$(APPDATA)\XIVLauncher\addon\Hooks $(TargetDir)ItemSearchPluginNoDeps.dll $(TargetDir)FFXIVClientStructs.dll $(TargetDir)System.Linq.Async.dll&#xD;&#xA;powershell -Command &quot;Remove-Item '$(TargetDir)\*.*';Move-Item '$(TargetDir)\..\ItemSearchPlugin.*' -Destination '$(TargetDir)';&quot;" />
	</Target>
	<Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(Configuration)'=='Release'">
		<Exec Command="powershell -Command &quot;New-Item -ItemType Directory -Force -Path '$(ProjectDir)Publish'; $a=Get-Item '$(TargetDir)ItemSearchPlugin.dll'; $jsonTemplate=Get-Content '$(ProjectDir)\$(ProjectName).template.json' | ConvertFrom-Json; $jsonTemplate.AssemblyVersion=$a.VersionInfo.FileVersion; $jsonTemplate.Description = $jsonTemplate.Description -join '\n'; ($jsonTemplate | ConvertTo-Json).Replace('\\n','\n') | Out-File '$(ProjectDir)\Publish\$(ProjectName).json' -Encoding utf8;Compress-Archive -Path '$(ProjectDir)\Publish\$(ProjectName).json','$(TargetDir)\*' -DestinationPath '$(ProjectDir)Publish\latest.zip' -Force&quot;" />
	</Target>
</Project>